<h1>Create a New Team</h1>

<%= form_with model: @team do |form| %>
  <div class="mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-input mt-1 block w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-input mt-1 block w-full" %>
  </div>

  <%= form.submit "Create Team", class: "btn btn-primary" %>
<% end %>
